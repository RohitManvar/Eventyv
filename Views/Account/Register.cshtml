@model Eventyv.Models.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create your Eventyv account</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800"><defs><radialGradient id="bg" cx="50%" cy="50%" r="60%"><stop offset="0%" style="stop-color:%23667eea;stop-opacity:1" /><stop offset="100%" style="stop-color:%23764ba2;stop-opacity:1" /></radialGradient></defs><rect width="1200" height="800" fill="url(%23bg)"/><g opacity="0.3"><circle cx="200" cy="200" r="80" fill="%23ffffff"/><circle cx="1000" cy="150" r="60" fill="%23ffffff"/><circle cx="150" cy="600" r="100" fill="%23ffffff"/><circle cx="900" cy="650" r="70" fill="%23ffffff"/><rect x="300" y="100" width="120" height="80" rx="8" fill="%23ffffff"/><rect x="700" y="500" width="150" height="60" rx="8" fill="%23ffffff"/><circle cx="600" cy="300" r="40" fill="%23ffffff"/><circle cx="400" cy="600" r="50" fill="%23ffffff"/><rect x="800" y="200" width="80" height="100" rx="8" fill="%23ffffff"/></g></svg>');
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 20px;
        }

        .register-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 24px 48px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 480px;
            padding: 48px;
            text-align: center;
            position: relative;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 32px;
        }

        .brand-logo i {
            font-size: 28px;
            color: #F05537;
            margin-right: 8px;
        }

        .brand-text {
            font-size: 24px;
            font-weight: 700;
            color: #F05537;
            letter-spacing: -0.3px;
        }

        .register-title {
            font-size: 36px;
            font-weight: 700;
            color: #1E293B;
            margin-bottom: 8px;
            line-height: 1.2;
        }

        .register-subtitle {
            font-size: 20px;
            font-weight: 500;
            color: #475569;
            margin-bottom: 32px;
        }

        .terms-links {
            font-size: 14px;
            color: #64748B;
            margin-bottom: 32px;
            line-height: 1.5;
        }

        .terms-links a {
            color: #F05537;
            text-decoration: none;
            font-weight: 500;
        }

        .terms-links a:hover {
            text-decoration: underline;
        }

        .validation-summary {
            background-color: #FEF2F2;
            border: 1px solid #FECACA;
            color: #DC2626;
            padding: 16px;
            border-radius: 8px;
            margin-bottom: 24px;
            font-size: 14px;
            text-align: left;
        }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #1E293B;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            font-size: 16px;
            border: 2px solid #E2E8F0;
            border-radius: 8px;
            background-color: #FAFAFA;
            color: #1E293B;
            transition: all 0.2s ease;
            outline: none;
        }

        .form-control:focus {
            border-color: #F05537;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(240, 85, 55, 0.1);
        }

        .form-control::placeholder {
            color: #94A3B8;
        }

        .text-danger {
            color: #DC2626;
            font-size: 14px;
            margin-top: 6px;
            display: block;
        }

        .password-requirements {
            font-size: 13px;
            color: #64748B;
            margin-top: 6px;
        }

        .password-strength {
            margin-top: 8px;
        }

        .strength-bar {
            height: 4px;
            background-color: #E2E8F0;
            border-radius: 2px;
            overflow: hidden;
            margin: 4px 0;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak {
            background-color: #DC2626;
            width: 25%;
        }

        .strength-fair {
            background-color: #F59E0B;
            width: 50%;
        }

        .strength-good {
            background-color: #EAB308;
            width: 75%;
        }

        .strength-strong {
            background-color: #10B981;
            width: 100%;
        }

        .continue-btn {
            width: 100%;
            padding: 16px 24px;
            font-size: 16px;
            font-weight: 600;
            background: #F05537;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-bottom: 24px;
        }

        .continue-btn:hover {
            background: #E04527;
            transform: translateY(-1px);
            box-shadow: 0 8px 24px rgba(240, 85, 55, 0.3);
        }

        .login-link {
            text-align: center;
            margin-bottom: 32px;
        }

        .login-link p {
            font-size: 14px;
            color: #64748B;
        }

        .login-link a {
            color: #F05537;
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 32px 0;
            color: #64748B;
            font-size: 14px;
        }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #E2E8F0;
        }

        .divider span {
            padding: 0 16px;
            background: white;
            font-weight: 500;
        }

        .social-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 56px;
            height: 56px;
            border: 2px solid #E2E8F0;
            border-radius: 12px;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            color: #475569;
            font-size: 20px;
        }

        .social-btn:hover {
            border-color: #F05537;
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

        .google-icon:hover {
            color: #4285f4;
        }

        .apple-icon:hover {
            color: #000;
        }

        .email-icon:hover {
            color: #F05537;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-container {
                padding: 32px 24px;
                margin: 10px;
            }

            .register-title {
                font-size: 28px;
            }

            .register-subtitle {
                font-size: 18px;
            }
        }

        @@media (max-width: 480px) {
            .register-container {
                padding: 24px 20px;
            }

            .register-title {
                font-size: 24px;
            }

            .register-subtitle {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Brand Logo -->
        <div class="brand-logo">
            <i class="fas fa-calendar-alt"></i>
            <span class="brand-text">eventyv</span>
        </div>

        <h1 class="register-title">Welcome!</h1>
        <p class="register-subtitle">Create your account</p>
        
        <p class="terms-links">
            Just a little reminder that by continuing with any of the options
            below, you agree to our
            <a asp-controller="Home" asp-action="Terms">Terms of Service</a>
            and
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>.
        </p>

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="validation-summary">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values
                                    .Where(v => v?.Errors?.Any() == true)
                                    .SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Registration Form -->
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label class="form-label" asp-for="UserName">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Email">Email address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" id="password" />
                <div class="password-requirements">
                    Password should be at least 8 characters long
                </div>
                <div class="password-strength">
                    <div class="strength-bar">
                        <div class="strength-fill" id="strengthBar"></div>
                    </div>
                    <span id="strengthText" style="font-size: 12px;"></span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="ConfirmPassword">Confirm password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" id="confirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="continue-btn">Create Account</button>
        </form>

        <div class="login-link">
            <p>Already have an account? <a asp-controller="Account" asp-action="Login">Log in</a></p>
        </div>

        <!-- Divider -->
        <div class="divider">
            <span>Or sign up with</span>
        </div>

        <!-- Social Registration Buttons -->
        <div class="social-buttons">
            <button type="button" class="social-btn" onclick="signupWithApple()">
                <i class="fab fa-apple apple-icon"></i>
            </button>
            <button type="button" class="social-btn" onclick="signupWithGoogle()">
                <i class="fab fa-google google-icon"></i>
            </button>
            <button type="button" class="social-btn" onclick="emailSignupLink()">
                <i class="fas fa-envelope email-icon"></i>
            </button>
        </div>
    </div>

    <script>
        // Password strength checker
        function checkPasswordStrength(password) {
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');

            let score = 0;
            if (password.length >= 8) score++;
            if (password.match(/[a-z]/)) score++;
            if (password.match(/[A-Z]/)) score++;
            if (password.match(/[0-9]/)) score++;
            if (password.match(/[^a-zA-Z0-9]/)) score++;

            strengthBar.className = 'strength-fill';

            if (score < 2) {
                strengthBar.classList.add('strength-weak');
                strengthText.textContent = 'Weak';
                strengthText.style.color = '#DC2626';
            } else if (score < 3) {
                strengthBar.classList.add('strength-fair');
                strengthText.textContent = 'Fair';
                strengthText.style.color = '#F59E0B';
            } else if (score < 4) {
                strengthBar.classList.add('strength-good');
                strengthText.textContent = 'Good';
                strengthText.style.color = '#EAB308';
            } else {
                strengthBar.classList.add('strength-strong');
                strengthText.textContent = 'Strong';
                strengthText.style.color = '#10B981';
            }
        }

        // Social signup functions
        function signupWithGoogle() {
            console.log('Google signup clicked');
            // Implement Google OAuth signup
            // window.location.href = '/Account/GoogleSignup';
        }

        function signupWithApple() {
