@model Eventyv.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Log in to Eventyv</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 800"><defs><radialGradient id="bg" cx="50%" cy="50%" r="60%"><stop offset="0%" style="stop-color:%23667eea;stop-opacity:1" /><stop offset="100%" style="stop-color:%23764ba2;stop-opacity:1" /></radialGradient></defs><rect width="1200" height="800" fill="url(%23bg)"/><g opacity="0.3"><circle cx="200" cy="200" r="80" fill="%23ffffff"/><circle cx="1000" cy="150" r="60" fill="%23ffffff"/><circle cx="150" cy="600" r="100" fill="%23ffffff"/><circle cx="900" cy="650" r="70" fill="%23ffffff"/><rect x="300" y="100" width="120" height="80" rx="8" fill="%23ffffff"/><rect x="700" y="500" width="150" height="60" rx="8" fill="%23ffffff"/><circle cx="600" cy="300" r="40" fill="%23ffffff"/><circle cx="400" cy="600" r="50" fill="%23ffffff"/><rect x="800" y="200" width="80" height="100" rx="8" fill="%23ffffff"/></g></svg>');
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 20px;
        }

        .login-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 24px 48px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 480px;
            padding: 48px;
            text-align: center;
            position: relative;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 32px;
        }

            .brand-logo i {
                font-size: 28px;
                color: #F05537;
                margin-right: 8px;
            }

        .brand-text {
            font-size: 24px;
            font-weight: 700;
            color: #F05537;
            letter-spacing: -0.3px;
        }

        .login-title {
            font-size: 36px;
            font-weight: 700;
            color: #1E293B;
            margin-bottom: 8px;
            line-height: 1.2;
        }

        .login-subtitle {
            font-size: 20px;
            font-weight: 500;
            color: #475569;
            margin-bottom: 32px;
        }

        .terms-links {
            font-size: 14px;
            color: #64748B;
            margin-bottom: 32px;
            line-height: 1.5;
        }

            .terms-links a {
                color: #F05537;
                text-decoration: none;
                font-weight: 500;
            }

                .terms-links a:hover {
                    text-decoration: underline;
                }

        .validation-summary {
            background-color: #FEF2F2;
            border: 1px solid #FECACA;
            color: #DC2626;
            padding: 16px;
            border-radius: 8px;
            margin-bottom: 24px;
            font-size: 14px;
            text-align: left;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 8px;
            color: #1E293B;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            font-size: 16px;
            border: 2px solid #E2E8F0;
            border-radius: 8px;
            background-color: #FAFAFA;
            color: #1E293B;
            transition: all 0.2s ease;
            outline: none;
        }

            .form-control:focus {
                border-color: #F05537;
                background-color: white;
                box-shadow: 0 0 0 3px rgba(240, 85, 55, 0.1);
            }

            .form-control::placeholder {
                color: #94A3B8;
            }

        .text-danger {
            color: #DC2626;
            font-size: 14px;
            margin-top: 6px;
            display: block;
        }

        .continue-btn {
            width: 100%;
            padding: 16px 24px;
            font-size: 16px;
            font-weight: 600;
            background: #F05537;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-bottom: 24px;
        }

            .continue-btn:hover {
                background: #E04527;
                transform: translateY(-1px);
                box-shadow: 0 8px 24px rgba(240, 85, 55, 0.3);
            }

        .register-link {
            text-align: center;
            margin-bottom: 32px;
        }

            .register-link p {
                font-size: 14px;
                color: #64748B;
                margin-bottom: 8px;
            }

            .register-link a {
                color: #F05537;
                text-decoration: none;
                font-weight: 600;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        .divider {
            display: flex;
            align-items: center;
            margin: 32px 0;
            color: #64748B;
            font-size: 14px;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background: #E2E8F0;
            }

            .divider span {
                padding: 0 16px;
                background: white;
                font-weight: 500;
            }

        .social-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-bottom: 24px;
        }

        .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 56px;
            height: 56px;
            border: 2px solid #E2E8F0;
            border-radius: 12px;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            color: #475569;
            font-size: 20px;
        }

            .social-btn:hover {
                border-color: #F05537;
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            }

        .google-icon:hover {
            color: #4285f4;
        }

        .apple-icon:hover {
            color: #000;
        }

        .email-icon:hover {
            color: #F05537;
        }

        .help-link {
            text-align: center;
            margin-top: 24px;
        }

            .help-link a {
                color: #3B82F6;
                text-decoration: none;
                font-size: 14px;
                font-weight: 500;
            }

                .help-link a:hover {
                    text-decoration: underline;
                }

        /* Responsive */
        @@media (max-width: 768px) {
            .login-container

        {
            padding: 32px 24px;
            margin: 10px;
        }

        .login-title {
            font-size: 28px;
        }

        .login-subtitle {
            font-size: 18px;
        }

        }

        @@media (max-width: 480px) {
            .login-container

        {
            padding: 24px 20px;
        }

        .login-title {
            font-size: 24px;
        }

        .login-subtitle {
            font-size: 16px;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Brand Logo -->
        <div class="brand-logo">
            <i class="fas fa-calendar-alt"></i>
            <span class="brand-text">eventyv</span>
        </div>

        <h1 class="login-title">Welcome!</h1>
        <p class="login-subtitle">What's your email?</p>

        <p class="terms-links">
            Just a little reminder that by continuing with any of the options
            below, you agree to our
            <a asp-controller="Home" asp-action="Terms">Terms of Service</a>
            and
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>.
        </p>

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            <div class="validation-summary">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values
                                    .Where(v => v?.Errors?.Any() == true)
                                    .SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Login Form -->
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label class="form-label" asp-for="UserName">Email address or username</label>
                <input asp-for="UserName" class="form-control" placeholder="Email" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="continue-btn">Continue</button>
        </form>

        <div class="register-link">
            <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Create account</a></p>
            <p><a asp-controller="Account" asp-action="ForgotPassword">Lost your password?</a></p>
        </div>

        <!-- Divider -->
        <div class="divider">
            <span>Or sign in with</span>
        </div>

        <!-- Social Login Buttons -->
        <div class="social-buttons">
            <button type="button" class="social-btn" onclick="loginWithApple()">
                <i class="fab fa-apple apple-icon"></i>
            </button>
            <button type="button" class="social-btn" onclick="loginWithGoogle()">
                <i class="fab fa-google google-icon"></i>
            </button>
            <button type="button" class="social-btn" onclick="emailLoginLink()">
                <i class="fas fa-envelope email-icon"></i>
            </button>
        </div>

        <!-- Help Link -->
        <div class="help-link">
            <a href="#" onclick="showHelp()">Need help finding your tickets?</a>
        </div>
    </div>

    <script>
        // Social login functions
        function loginWithGoogle() {
            console.log('Google login clicked');
            // Implement Google OAuth
            // window.location.href = '/Account/GoogleLogin';
        }

        function loginWithApple() {
            console.log('Apple login clicked');
            // Implement Apple OAuth
            // window.location.href = '/Account/AppleLogin';
        }

        function emailLoginLink() {
            console.log('Email login link clicked');
            // Implement magic link functionality
            // window.location.href = '/Account/MagicLink';
        }

        function showHelp() {
            alert('Help section would be shown here!');
        }

        // Auto-focus on username field
        document.addEventListener('DOMContentLoaded', function () {
            const usernameInput = document.querySelector('input[name="UserName"]');
            if (usernameInput) {
                usernameInput.focus();
            }
        });

        // Handle form submission
        document.querySelector('form').addEventListener('submit', function(e) {
            const usernameInput = document.querySelector('input[name="UserName"]');
            const passwordInput = document.querySelector('input[name="Password"]');

            // Basic validation
            if (!usernameInput.value.trim() || !passwordInput.value.trim()) {
                e.preventDefault();
                alert('Please fill in all fields');
                return;
            }
        });
    </script>
</body>
</html>