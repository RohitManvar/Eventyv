@{
    ViewData["Title"] = "Events in Your Area - Eventyv";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background-color: #f6f7f7;
            color: #2c3338;
            line-height: 1.5;
        }
        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, rgba(56, 88, 233, 0.9), rgba(0, 115, 170, 0.9)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 600"><rect fill="%23f0f0f0" width="1200" height="600"/><circle fill="%23e0e0e0" cx="300" cy="150" r="80"/><circle fill="%23d0d0d0" cx="900" cy="200" r="60"/><rect fill="%23e8e8e8" x="100" y="400" width="200" height="120" rx="8"/><rect fill="%23e8e8e8" x="900" y="450" width="150" height="80" rx="8"/></svg>');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 80px 0;
            text-align: center;
        }

        .hero-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .hero-title {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 16px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .hero-highlight {
            background: #ff5722;
            padding: 4px 12px;
            border-radius: 4px;
            display: inline-block;
        }

        .hero-subtitle {
            font-size: 20px;
            margin-bottom: 32px;
            opacity: 0.9;
        }

        .hero-cta {
            background: white;
            color: #2c3338;
            padding: 16px 32px;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: transform 0.2s;
        }

            .hero-cta:hover {
                transform: translateY(-2px);
                text-decoration: none;
                color: #2c3338;
            }

        /* Categories */
        .categories-section {
            background: white;
            padding: 48px 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .categories-grid {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            gap: 32px;
            text-align: center;
        }

        .category-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: #646970;
            transition: all 0.2s;
        }

            .category-item:hover {
                color: #0073aa;
                text-decoration: none;
                transform: translateY(-4px);
            }

        .category-icon {
            width: 64px;
            height: 64px;
            background: #f6f7f7;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 12px;
            transition: all 0.2s;
        }

        .category-item:hover .category-icon {
            background: #e7f3ff;
            color: #0073aa;
        }

        .category-name {
            font-size: 14px;
            font-weight: 600;
        }

        /* Events Section */
        .events-section {
            padding: 48px 0;
        }

        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 32px;
        }

        .section-title {
            font-size: 28px;
            font-weight: 600;
            color: #1d2327;
        }

        .location-info {
            font-size: 16px;
            color: #646970;
        }

        .view-controls {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .view-toggle {
            display: flex;
            background: white;
            border: 1px solid #dcdcde;
            border-radius: 4px;
            overflow: hidden;
        }

        .view-btn {
            padding: 8px 12px;
            border: none;
            background: none;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.2s;
        }

            .view-btn.active {
                background: #0073aa;
                color: white;
            }

        .filter-tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 32px;
            border-bottom: 1px solid #dcdcde;
        }

        .filter-tab {
            padding: 12px 16px;
            background: none;
            border: none;
            font-size: 16px;
            font-weight: 500;
            color: #646970;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            transition: all 0.2s;
        }

            .filter-tab.active {
                color: #0073aa;
                border-bottom-color: #0073aa;
            }

        .events-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 24px;
        }

        .event-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.2s;
            text-decoration: none;
            color: inherit;
        }

            .event-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
                text-decoration: none;
                color: inherit;
            }

        .event-image {
            height: 160px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            position: relative;
            overflow: hidden;
        }

        .event-date-badge {
            position: absolute;
            top: 12px;
            left: 12px;
            background: white;
            border-radius: 8px;
            padding: 8px 12px;
            text-align: center;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .badge-month {
            font-size: 12px;
            font-weight: 600;
            color: #ff5722;
            text-transform: uppercase;
        }

        .badge-day {
            font-size: 18px;
            font-weight: 700;
            color: #1d2327;
        }

        .event-price {
            position: absolute;
            top: 12px;
            right: 12px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .event-content {
            padding: 20px;
        }

        .event-title {
            font-size: 18px;
            font-weight: 600;
            color: #1d2327;
            margin-bottom: 8px;
            line-height: 1.3;
        }

        .event-meta {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 12px;
            font-size: 14px;
            color: #646970;
        }

            .event-meta i {
                width: 16px;
                text-align: center;
            }

        .event-organizer {
            font-size: 14px;
            color: #646970;
            margin-bottom: 12px;
        }

        .event-tags {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .event-tag {
            background: #f0f0f1;
            color: #646970;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 500;
        }

        /* Destinations Section */
        .destinations-section {
            background: white;
            padding: 64px 0;
        }

        .destinations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 24px;
            margin-top: 32px;
        }

        .destination-card {
            position: relative;
            height: 200px;
            border-radius: 12px;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            text-decoration: none;
            transition: transform 0.2s;
        }

            .destination-card:hover {
                transform: scale(1.02);
                text-decoration: none;
                color: white;
            }

        .destination-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
            padding: 32px 20px 20px;
        }

        .destination-name {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 4px;
        }

        .destination-count {
            font-size: 14px;
            opacity: 0.9;
        }

        /* Popular Cities */
        .popular-cities {
            padding: 48px 0;
        }

        .cities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-top: 24px;
        }

        .city-link {
            background: white;
            padding: 16px 20px;
            border-radius: 8px;
            text-decoration: none;
            color: #0073aa;
            font-weight: 500;
            transition: all 0.2s;
            border: 1px solid #dcdcde;
        }

            .city-link:hover {
                background: #f6f7f7;
                text-decoration: none;
                color: #005a87;
            }

        /* Footer */
        .footer {
            background: #1d2327;
            color: white;
            padding: 48px 0 24px;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 32px;
            margin-bottom: 32px;
        }

        .footer-section h4 {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .footer-link {
            display: block;
            color: #8c8f94;
            text-decoration: none;
            margin-bottom: 8px;
            font-size: 14px;
            transition: color 0.2s;
        }

            .footer-link:hover {
                color: white;
            }

        .footer-bottom {
            border-top: 1px solid #3c434a;
            padding-top: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .footer-bottom-links {
            display: flex;
            gap: 24px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                gap: 16px;
                align-items: stretch;
            }

            .search-container {
                margin: 0;
                order: 3;
            }

            .header-actions {
                order: 2;
                justify-content: space-between;
            }

            .location-input {
                width: auto;
                flex: 1;
            }

            .hero-title {
                font-size: 32px;
            }

            .categories-grid {
                grid-template-columns: repeat(4, 1fr);
                gap: 16px;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 16px;
            }

            .events-grid {
                grid-template-columns: 1fr;
            }

            .footer-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .footer-bottom {
                flex-direction: column;
                gap: 16px;
                text-align: center;
            }
        }
    </style>
</head>
