<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eventyv</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/hf.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eventyv.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container d-flex justify-content-between align-items-center">
            @Html.ActionLink("eventyv", "Index", "Home", null, new { @class = "logo" })

            <!-- Search -->
            <div class="search-container d-flex">
                <input type="text" class="form-control me-2" placeholder="Search events">
                <input type="text" class="form-control me-2" placeholder="Search location">
                <button class="btn btn-primary"><i class="fas fa-search"></i></button>
            </div>

            <!-- Actions -->
            <div class="header-actions d-flex align-items-center">
                @Html.ActionLink("Find Events", "SearchEvent", "Events", null, new { @class = "header-link me-2" })
                @Html.ActionLink("Create Events", "Create", "Events", null, new { @class = "create-event-btn me-2" })
                @Html.ActionLink("Help Center", "Help", "Home", null, new { @class = "header-link me-2" })

                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Profile dropdown -->
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" href="#" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width:32px; height:32px;">
                                @User.Identity.Name.Substring(0, 1).ToUpper()
                            </div>
                            <span>@User.Identity.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li>@Html.ActionLink("Browse Events", "Events", "Home", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Manage My Events", "MyEvents", "Events", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Tickets", "MyTickets", "Account", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Liked", "LikedEvents", "Account", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Interest", "InterestedEvents", "Account", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Account Settings", "Settings", "Account", null, new { @class = "dropdown-item" })</li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </div>
                }
                else
                {
                    // Hide login/signup on Login and Register pages
                    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
                    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

                    if (!(currentController == "Account" && (currentAction == "Login" || currentAction == "Register")))
                    {
                        @Html.ActionLink("Log in", "Login", "Account", null, new { @class = "header-link me-2" })
                        @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "header-link" })
                    }
                }
            </div>

        </div>
    </header>

    <!-- Main content -->
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>