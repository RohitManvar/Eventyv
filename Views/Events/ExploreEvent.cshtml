                            <div class="attendee-avatar">F</div>
                            <div class="attendee-avatar">G</div>
                        </div>
                        <span>89+ attending</span>
                    </div>
                </div>
            </a>

            <!-- Event Card 3 -->
            <a href="@Url.Action("Details", "Events", new { id = 3 })" class="event-card">
                <div class="event-image" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
                    <div class="event-date-badge">
                        <div class="badge-month">Dec</div>
                        <div class="badge-day">22</div>
                    </div>
                    <div class="event-price">₹199</div>
                    <button class="event-favorite favorited" onclick="toggleFavorite(event, 3)">
                        <i class="fas fa-heart"></i>
                    </button>
                </div>
                <div class="event-content">
                    <h3 class="event-title">Hoppam 2025: Ahmedabad (Gujarat)</h3>
