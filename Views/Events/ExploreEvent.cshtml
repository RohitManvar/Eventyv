                        <span><i class="fas fa-clock"></i> Mon, Dec 22 • 10:00 AM</span>
                        <span><i class="fas fa-map-marker-alt"></i> Ahmedabad</span>
                    </div>
                    <div class="event-organizer">By EventHub</div>
                    <div class="event-tags">
                        <span class="event-tag">Conference</span>
                        <span class="event-tag">Networking</span>
                    </div>
                    <div class="event-attendees">
                        <div class="attendee-avatars">
                            <div class="attendee-avatar">H</div>
                            <div class="attendee-avatar">I</div>
                        </div>
                        <span>156+ attending</span>
                    </div>
                </div>
            </a>

            <!-- Event Card 4 -->
            <a href="@Url.Action("Details", "Events", new { id = 4 })" class="event-card">
                <div class="event-image" style="background: linear-gradient(135deg, #fa709a, #fee140);">
                    <div class="event-date-badge">
                        <div class="badge-month">Dec</div>
                        <div class="badge-day">28</div>
                    </div>
                    <div class="event-price">Free</div>
                    <button class="event-favorite" onclick="toggleFavorite(event, 4)">
                        <i class="far fa-heart"></i>
                    </button>
                </div>
                <div class="event-content">
                    <h3 class="event-title">Pool Party Extravaganza</h3>
                    <div class="event-meta">
                        <span><i class="fas fa-clock"></i> Sat, Dec 28 • 6:30 PM</span>
                        <span><i class="fas fa-map-marker-alt"></i> Mumbai</span>
                    </div>
                    <div class="event-organizer">By Party Planners</div>
                    <div class="event-tags">
                        <span class="event-tag">Pool Party</span>
                        <span class="event-tag">Music</span>
                    </div>
                    <div class="event-attendees">
                        <div class="attendee-avatars">
                            <div class="attendee-avatar">J</div>
                            <div class="attendee-avatar">K</div>
                            <div class="attendee-avatar">L</div>
                        </div>
                        <span>324+ attending</span>
                    </div>
                </div>
            </a>

            <!-- Event Card 5 -->
            <a href="@Url.Action("Details", "Events", new { id = 5 })" class="event-card">
                <div class="event-image" style="background: linear-gradient(135deg, #a8edea, #fed6e3);">
                    <div class="event-date-badge">
                        <div class="badge-month">Dec</div>
                        <div class="badge-day">31</div>
                    </div>
                    <div class="event-price">₹1,299</div>
                    <button class="event-favorite" onclick="toggleFavorite(event, 5)">
                        <i class="far fa-heart"></i>
                    </button>
                </div>
                <div class="event-content">
                    <h3 class="event-title">New Year Party 2025 - Jungle Music Festival</h3>
                    <div class="event-meta">
                        <span><i class="fas fa-clock"></i> Tue, Dec 31 • 8:00 PM</span>
                        <span><i class="fas fa-map-marker-alt"></i> Bangalore</span>
                    </div>
                    <div class="event-organizer">By Music Events</div>
                    <div class="event-tags">
                        <span class="event-tag">New Year</span>
                        <span class="event-tag">Music</span>
                    </div>
                    <div class="event-attendees">
                        <div class="attendee-avatars">
                            <div class="attendee-avatar">M</div>
                            <div class="attendee-avatar">N</div>
                            <div class="attendee-avatar">O</div>
